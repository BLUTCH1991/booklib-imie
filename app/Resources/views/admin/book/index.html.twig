{% extends 'admin/layout.html.twig' %}

{% block body %}
    <main class="container">
        <h1>Books list</h1>

        <a href="{{ path('admin_book_new') }}" class="btn btn-primary">
                <i class="fa fa-play-circle"></i> 
                Ajouter
            </a>
        <table class="table table-striped table-condensed">
            <thead>
                <tr>                            <th>Title</th>                            <th>Reference</th>                            <th>Image</th>                            <th>Synopsis</th>                            <th>Createdat</th>                            <th>Updatedat</th>                    <th class="table-actions-header">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.reference }}</td>
                    <td>{{ book.image }}</td>
                    <td>{{ book.synopsis }}</td>
                    <td>{% if book.createdAt %}{{ book.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if book.updatedAt %}{{ book.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>                        <a href="{{ path('admin_book_show', { 'id': book.id }) }}" class="btn btn-default">
                            <i class="fa fa-eye"></i> 
                            show
                        </a>                        <a href="{{ path('admin_book_edit', { 'id': book.id }) }}" class="btn btn-primary">
                            <i class="fa fa-edit"></i> 
                            edit
                        </a>                </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}
