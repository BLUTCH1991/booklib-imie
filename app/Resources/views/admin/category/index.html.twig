{% extends 'admin/layout.html.twig' %}

{% block body %}
    <main class="container">
        <h1>Categories list</h1>

        <a href="{{ path('admin_category_new') }}" class="btn btn-primary">Ajouter</a>
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>Name</th>                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                <td>                        <a href="{{ path('admin_category_show', { 'id': category.id }) }}" class="btn btn-default">
                            <i class="fa fa-eye"></i> 
                            show
                        </a>                        <a href="{{ path('admin_category_edit', { 'id': category.id }) }}" class="btn btn-primary">
                            <i class="fa fa-edit"></i> 
                            edit
                        </a>                </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}
