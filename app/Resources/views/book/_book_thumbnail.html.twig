<div class="thumbnail">
    <img src="uploads/{{ book.image }}" alt="{{ book.title }}">
    <div class="caption">
        <h3>{{ book.title }}</h3>
        <div class="book-infos">
            <span class="label label-info"><i class="fa fa-user"></i> {{ book.author.fullname }}</span>
            <span class="label label-success"><i class="fa fa-tag"></i> Roman</span>
            <span class="label label-success"><i class="fa fa-tag"></i> Fantastique</span>
        </div>
        <p><a href="#" class="btn btn-primary" role="button"><i class="fa fa-eye"></i> Voir plus</a></p>
    </div>
</div>